<% @page_title = "Login" -%>
 
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login, :class => 'text' %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password, :class => 'text' %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <button type="submit" class="button positive">
    <img src="/stylesheets/blueprint/plugins/buttons/icons/tick.png" alt=""/> Login
  </button>

  <a class="button" href="<%= new_password_reset_path %>">
	<img src="/stylesheets/blueprint/plugins/buttons/icons/key.png" alt=""/> Change Password
  </a>
<% end %>
