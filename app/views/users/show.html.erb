<% @page_title = "My Account" -%>

<%= image_tag @user.avatar.url(:medium) %>

<p>
  <b>Login:</b>
  <%= @user.login %>
</p>
 
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
 
<p>
  <b>Login count:</b>
  <%= @user.login_count %>
</p>
 
<p>
  <b>Last request at:</b>
  <%= @user.last_request_at %>
</p>
 
<p>
  <b>Last login at:</b>
  <%= @user.last_login_at %>
</p>
 
<p>
  <b>Current login at:</b>
  <%= @user.current_login_at %>
</p>
 
<p>
  <b>Last login ip:</b>
  <%= @user.last_login_ip %>
</p>
 
<p>
  <b>Current login ip:</b>
  <%= @user.current_login_ip %>
</p>

<p>
  <b>Watched area:</b>
  <%= @user.areas.first.name if @user.areas.length > 0 %>
</p>
 
 
<%= link_to 'Edit', edit_account_path %>
