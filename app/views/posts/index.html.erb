<div class='span-16'>
  <h1>Listing posts</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.body %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New post', new_post_path %>
</div>

<div class="span-8 last">
  <%= @area.name if @area %>
  <div class="map_div">
     <%= @map.div if @map %>
  </div>
</div>