<div class="post" id="post<%=post.id-%>">
  <%= image_tag(post.user.avatar.url(:thumb), :align => :right) if post.user && post.user.avatar %>
  <b><%=link_to post.title, post %></b>
<%= post.body %>
  <div class="small">Tags: <%= post.tag_list %> <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
    <hr />
  </div>
</div>